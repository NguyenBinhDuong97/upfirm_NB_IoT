#ifndef APPLICATION_H_
#define APPLICATION_H_

#include "main.h"
#include "stdint.h"

typedef enum{
	_INITIAL_,
	_PUSH_BUTTON_,
	_BOOT_START_,
	_BOOTING_,
	_BOOT_END_,
	_CHECK_RECEIVE_DONE_,
	_CHECK_RECEIVE_,
	_CALL_APPLICATION_,
	_CHECK_BOOT_PROCESS_,  //timer check quá trình boot có bị treo hay không
	_ERROR_, // xu ly qua trinh boot bi loi
} EVENT;

typedef uint8_t event;
typedef uint8_t pre_event;


void Handle_Event (event Event);
#endif /* APPLICATION_H_ */
